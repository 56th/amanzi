<amanzi_input version="2.1.0" type="unstructured">

	<model_description name="1D Calcite Dissolution">
		<author>Glenn Hammond</author>
		<units>
			<length_unit>m</length_unit>
			<time_unit>y</time_unit>
			<mass_unit>kg</mass_unit>
			<conc_unit>molar</conc_unit>
		</units>
	</model_description>
	
	<definitions>
	    	<macros>
				<cycle_macro name="Every-100-steps">
					<start>0</start>
					<timestep_interval>100</timestep_interval>
					<stop>-1</stop>
				</cycle_macro>
				<time_macro name="Macro 1">
					<time>0.50 y</time>
					<time>1.00 y</time>
					<time>1.50 y</time>
					<time>2.00 y</time>
					<time>3.50 y</time>
					<time>3.00 y</time>
					<time>4.50 y</time>
					<time>4.00 y</time>
					<time>5.50 y</time>
					<time>5.00 y</time>
					<time>6.50 y</time>
					<time>6.00 y</time>
					<time>7.50 y</time>
					<time>7.00 y</time>
					<time>8.50 y</time>
					<time>8.00 y</time>
					<time>9.00 y</time>
					<time>10.00 y</time>
					<time>11.00 y</time>
					<time>12.00 y</time>
					<time>13.00 y</time>
					<time>14.00 y</time>
					<time>15.00 y</time>
					<time>16.00 y</time>
					<time>17.00 y</time>
					<time>18.00 y</time>
					<time>19.00 y</time>
					<time>20.00 y</time>
					<time>21.00 y</time>
					<time>22.00 y</time>
					<time>23.00 y</time>
					<time>24.00 y</time>
					<time>25.00 y</time>
				</time_macro>
		</macros>
	</definitions>
	
	
	<process_kernels>
		<flow state="on" model="saturated"></flow>
		<transport state="on" algorithm="implicit upwind"></transport>
		<chemistry state="on" process_model="implicit operator split"></chemistry>
	</process_kernels>
	
	
	<phases>
		<liquid_phase name="water">
			<eos>False</eos>
			<viscosity>1.0e-3</viscosity>
			<density>1000.0</density>
			<dissolved_components>
				<solutes>
					H+
					HCO3-
					Ca++
				</solutes>
				<coefficient_of_diffusion>1.0e-9</coefficient_of_diffusion>
			</dissolved_components>
		</liquid_phase>
		<solid_phase>
			<minerals>
				<mineral>Calcite</mineral>
			</minerals>
		</solid_phase>
	</phases>
	
	<execution_controls>
			<comments>TDS added these as required by the schema </comments>
			<execution_control_defaults init_dt="1.0 h" max_dt="0.25 y" reduction_factor="0.8" increase_factor="1.25" mode="steady" method="picard"></execution_control_defaults>
			<execution_control start="0.0 y" end="25.0 y" init_dt="1.0 h" max_dt="0.25 y" reduction_factor="0.5" increase_factor="2.0" mode="steady" method="picard"></execution_control>
	</execution_controls>
	
	<numerical_controls>
		<comments>Numerical controls comments here</comments>
		<steady-state_controls>
		        <comments>Note that this section contained data on timesteps, which was moved into the execution control section.</comments>
          		<min_iterations>10</min_iterations>
		      	<max_iterations>20</max_iterations>
          		<max_preconditioner_lag_iterations>30</max_preconditioner_lag_iterations>
          		<nonlinear_tolerance>1.0e-5</nonlinear_tolerance>
          		<error_rel_tol>0.0</error_rel_tol>
          		<error_abs_tol>1.0</error_abs_tol>
          		<pseudo_time_integrator>
               			<method>picard</method>
          				<preconditioner>hypre amg</preconditioner>
          				<linear_solver>aztec00</linear_solver>
          				<control_options>pressure</control_options>
          				<divergent_max_iterations>100</divergent_max_iterations>
          				<clipping_saturation>0.95</clipping_saturation>
          				<convergence_tolerance>0.95</convergence_tolerance>
          				<initialize_with_darcy>true</initialize_with_darcy>
          		</pseudo_time_integrator>
		</steady-state_controls>
		<transient_controls>
			<comments>Proposed comments section.</comments>
			<integration_method name="bdf1">
			   <convergence_criteria error_rel_tol="0.0" error_abs_tol="0.0"></convergence_criteria>
                           <nonlinear_solver_parameters min_iterations="12" max_iterations="20" max_preconditioner_lag="5"></nonlinear_solver_parameters>
			</integration_method>
		</transient_controls>
		<linear_solver>
			<comments>Proposed comment section.</comments>
			<method>gmres</method>
			<max_iterations>20</max_iterations>
			<tolerance>1.0e-18</tolerance>
			<ml_cycle_applications>3</ml_cycle_applications>
			<use_hypre_amg>true</use_hypre_amg>
			<use_block_ilu>false</use_block_ilu>
			<hypre_amg_cycle_applications>10</hypre_amg_cycle_applications>
			<hypre_amg_smoother_sweeps>10</hypre_amg_smoother_sweeps>
			<hypre_amg_tolerance>0.1</hypre_amg_tolerance>
			<hypre_amg_threshold>0.8</hypre_amg_threshold>
			<ml_smoother_type>jacobi</ml_smoother_type>
       		         <sub_cycling>true</sub_cycling>
			<transport_sub_cycling>true</transport_sub_cycling>
		</linear_solver>
	</numerical_controls>
	
	<mesh framework="mstk">
		<comments>GEH: Using 3D domain since I don't know the format for 1D.</comments>
		<dimension>3</dimension>
		<generate>
			<number_of_cells nx="100" ny="1" nz="1"></number_of_cells>
			<box low_coordinates="(0.0,0.0,0.0)" high_coordinates="(100.0,1.0,1.0)"></box>
		</generate>
	</mesh>
	
	<regions>
		<region name="All">
			<box low_coordinates="(0.0,0.0,0.0)" high_coordinates="(100.0,1.0,1.0)"></box>
		</region>

		<region name="Inlet Boundary">
			<box low_coordinates="(0.0,0.0,0.0)" high_coordinates="(0.0,1.0,1.0)"></box>
		</region>

		<region name="Outlet Boundary">
			<box low_coordinates="(110.0,0.0,0.0)" high_coordinates="(100.0,1.0,1.0)"></box>
		</region>

		<point name="inlet" coordinate="(25.0,1.0,1.0)"></point>		
		<point name="quarter_distance" coordinate="(25.0,1.0,1.0)"></point>
		<point name="half_distance" coordinate="(50.0,1.0,1.0)"></point>
		<point name="three_quarter_distance" coordinate="(75.0,1.0,1.0)"></point>
		<point name="outlet" coordinate="(25.0,1.0,1.0)"></point>		

	</regions>
	
	<materials>
		<material name="soil1">
			<mechanical_properties>
				<porosity value="0.25"></porosity>
				<particle_density value="2720.0"></particle_density>
			</mechanical_properties>
			<permeability x="1.0e-12" y="1.0e-12" z="1.0e-12"></permeability>
			<!--No capillary pressure or relative permeability model due to saturated flow-->
			<assigned_regions>All</assigned_regions>
		</material>
	</materials>
	
  	<geochemistry>
		<reaction_network_filename>calcite_flow_and_tran.in</reaction_network_filename>
		<constraints>
			<!-- Provide a list of constraints for various chemistry in system. -->
                        <!-- Chemistry input needs to be consolidated and migrated to xml file
                             as funding becomes available -->
			<constraint name="Initial">
				<solute name="H+" value="1.0e-8" type="Free Ion Concentration"></solute>
				<solute name="HCO3-" value="1.0e-3" type="Gas" gas="CO2(g)"></solute>
				<solute name="Ca++" value="5.0e-4" type="Mineral" mineral="Calcite"></solute>
				<mineral name="Calcite" volume_fraction="1.0e-5" surface_area="1.0"></mineral>
			</constraint>
			<!-- Mineral named in constraint = "Initial" because it's used to set initial condition -->
			<constraint name="Inlet">
				<solute name="H+" value="5.0" type="pH"></solute>
				<solute name="HCO3-" value="1.0e-3" type="Total Component Concentration"></solute>
				<solute name="Ca++" value="1.0e-6" type="Charge Balance"></solute>
			</constraint>
                        <!-- OR -->
                        <!-- Advantage is that reaction network and associated constraints are
                             all in the same place per Glenn and Vicky's discussion 
                             Consolidating to pflotran is first step towards consolidation  -->
			<constraint name="Initial" filename="calcite_flow_and_tran.in"></constraint>
			<constraint name="Inlet" filename="calcite_flow_and_tran.in"></constraint>
		</constraints>
	</geochemistry>
	
	<initial_conditions>
		<liquid_phase name="water">
			<initial_condition name="Background Aqueous">
				<assigned_regions>All</assigned_regions>
				<liquid_component name="water">
					<pressure value="201325.0"></pressure>
				</liquid_component>
				<geochemistry>
					<constraint name="Initial"></constraint>
				</geochemistry>
			</initial_condition>
    		</liquid_phase>
		<solid_phase name="Solid">
			<initial_condition name="Background Solid">
				<assigned_regions>All</assigned_regions>
				<geochemistry>
					<constraint name="Initial"></constraint>
				</geochemistry>
			</initial_condition>
		</solid_phase>
	</initial_conditions>
	
	<boundary_conditions>
		<liquid_phase name="water">
			<boundary_condition name="Inlet">
				<assigned_regions>Inlet Boundary</assigned_regions>
				<liquid_component name="water">
					<inward_volumetric_flux value="1.0" start="0" function="constant"></inward_volumetric_flux>
				</liquid_component>
				<geochemistry>
					<constraint name="Inlet" start="0.0" function="constant"></constraint>
				</geochemistry>
			</boundary_condition>
			<boundary_condition name="Outlet">
				<assigned_regions>Outlet Boundary</assigned_regions>
				<liquid_component name="water">
					<uniform_pressure value="201325.0" start="0.0" function="constant"></uniform_pressure>
				</liquid_component>
				<geochemistry>
					<constraint name="Initial" start="0.0" function="constant"></constraint>
				</geochemistry>
			</boundary_condition>
		</liquid_phase>
	</boundary_conditions>	
	
	<output>
		<vis>
			<base_filename>plot</base_filename>
		  	<num_digits>5</num_digits>
		  	<time_macro>Macro 1</time_macro>
		</vis>

		<checkpoint>
			<base_filename>chk</base_filename>
		  	<num_digits>5</num_digits>
		  	<time_macro>Every_100_timesteps</time_macro>
		</checkpoint>

		<observations>
       			<filename>observations.out</filename>
			<liquid_phase name="water">
          			<observation variable="Integrated Mass">
              				<filename>imass.out</filename>  <!-- later when there is more $$; for now all observation is output to same file -->
             				<assigned_regions>All</assigned_regions>
            				<functional>integral</functional>
              				<time_macro>Macro 1</time_macro>
           			</observation>

           			<observation variable="H+">
					<filename>conc.out</filename>  <!-- later when there is more $$; for now all observation is output to same file -->
					<assigned_regions>half_distance,outlet</assigned_regions>
					<functional>point</functional>
					<time_macro>Macro 1</time_macro>
				</observation>
			</liquid_phase>
		</observations>
	</output>
	
</amanzi_input>
