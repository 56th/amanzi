<!--

  For use only with amanzi-alt-driver.

  This is a very simple 2D, steady-state diffusion/conduction problem
  solved here as Darcy Flow.  The head on 3 boundaries (in plan view)
  is 0.0 while the head on the fourth boundary is 1.0.  The resulting
  steady-state head has an analytic solution.  I think this is a
  pretty standard problem.  I found it here:
  http://webserver.dmt.upm.es/~isidoro/bk3/c11/Heat conduction.htm
  (bottom of Table 7).

  -->
<ParameterList name="Main">

  <ParameterList name="Mesh">

    <!-- 

      The mesh is just a block of hexes.  Currently, only two mesh
      frameworks can do this: Simple and stk::mesh.  The following
      lines can be used to test individual frameworks, but they are
      not required.

      This case will work in parallel only if the stk::mesh framework
      is compiled in.

      Sideset id's are the same for Simple and stk::mesh.

    -->

    <!--
    <Parameter name="Framework" type="string" value="Simple" />
    -->
    <!--
    <Parameter name="Framework" type="string" value="stk::mesh" />
    -->
    <ParameterList name="Generate">

      <!-- Set mesh resolution here -->
      <Parameter name="Numer of Cells in X" type="int" value="50"/>
      <Parameter name="Numer of Cells in Y" type="int" value="50"/>
      <Parameter name="Numer of Cells in Z" type="int" value=" 3"/>

      <Parameter name="X_Min" type="double" value="-1.0" />
      <Parameter name="X_Max" type="double" value=" 1.0" />
      <Parameter name="Y_Min" type="double" value="-1.0" />
      <Parameter name="Y_Max" type="double" value=" 1.0" />
      <Parameter name="Z_Min" type="double" value="-0.075" />
      <Parameter name="Z_Max" type="double" value=" 0.075" />

    </ParameterList>   
  </ParameterList>
  

  <ParameterList name="MPC">
    <Parameter name="Start Time" type="double" value="0.0"/>
    <Parameter name="End Time" type="double" value="86400"/>
    <Parameter name="End Cycle" type="int" value="-1"/>
    <Parameter name="disable Flow_PK" type="string" value="no"/>
    <Parameter name="disable Transport_PK" type="string" value="yes"/>
    <Parameter name="disable Chemistry_PK" type="string" value="yes"/>
    <Parameter name="Viz dump cycle frequency" type="int" value="-1"/>
    <Parameter name="Viz dump time frequency" type="double" value="86400"/> 
    <ParameterList name="CGNS">
      <Parameter name="File name" type="string" value="simple2d.cgns"/>
    </ParameterList>    
  </ParameterList> 

  
  <ParameterList name="State">
    <Parameter name="Number of mesh blocks" type="int" value="1"/>
    <Parameter name="Number of component concentrations" type="int" value="1"/>
    <Parameter name="Constant water saturation" type="double" value="1.0"/>
    <Parameter name="Constant water density" type="double" value="1000.0"/>
    <Parameter name="Constant viscosity" type="double" value="0.001308"/> <!-- water at 10 Celsius --> 
    <Parameter name="Gravity x" type="double" value="0.0"/>
    <Parameter name="Gravity y" type="double" value="0.0"/>
    <Parameter name="Gravity z" type="double" value="-9.8"/>

    <ParameterList name="Mesh block 1"> 
      <Parameter name="Mesh block ID" type="int" value="0"/>
      <Parameter name="Constant porosity" type="double" value="0.4"/>
      <Parameter name="Constant permeability" type="double" value="1.0E-03"/>
      <Parameter name="Constant component concentration 0" type="double" value="0.0"/>
    </ParameterList>
  </ParameterList>


  <ParameterList name="Flow">
    <Parameter name="Max Iterations" type="int" value="25"/>
    <Parameter name="Error Tolerance" type="double" value="1.0e-20"/>
    
    <ParameterList name="Darcy Problem">
      <ParameterList name="Diffusion Preconditioner">
	<ParameterList name="ML Parameters">
  	  <Parameter name="max levels" type="int" value="40"/>
	  <Parameter name="prec type" type="string" value="MGV"/>
	  <Parameter name="increasing or decreasing" type="string" value="increasing"/>
	  <Parameter name="aggregation: type" type="string" value="Uncoupled-MIS"/>
	  <Parameter name="aggregation: damping factor" type="double" value="1.333"/>
	  <Parameter name="aggregation: threshold" type="double" value="0.03"/>
	  <Parameter name="eigen-analysis: type" type="string" value="cg"/>
	  <Parameter name="eigen-analysis: iterations" type="int" value="20"/>
	  <Parameter name="smoother: sweeps" type="int" value="5"/>
	  <Parameter name="smoother: damping factor" type="double" value="1.0"/>
	  <Parameter name="smoother: pre or post" type="string" value="both"/>
	  <Parameter name="smoother: type" type="string" value="symmetric Gauss-Seidel"/>
	  <Parameter name="coarse: type" type="string" value="Amesos-KLU"/>
	  <Parameter name="coarse: max size" type="int" value="128"/>	   
	</ParameterList>
      </ParameterList>
    </ParameterList>

    <ParameterList name="Flow BC">
      <Parameter name="number of BCs" type="int" value="6"/>

      <!-- West -->
      <ParameterList name="BC00">
	<Parameter name="Type" type="string" value="Static Head"/>
	<Parameter name="BC value" type="double" value="0.0" />
	<Parameter name="Side set ID" type="int" value="3" />
      </ParameterList>      

      <!-- East -->
      <ParameterList name="BC01">
	<Parameter name="Type" type="string" value="Static Head"/>
	<Parameter name="BC value" type="double" value="0.0" />
	<Parameter name="Side set ID" type="int" value="1" />
      </ParameterList>      

      <!-- South -->
      <ParameterList name="BC02">
	<Parameter name="Type" type="string" value="Static Head"/>
	<Parameter name="BC value" type="double" value="1.0" />
	<Parameter name="Side set ID" type="int" value="0" />
      </ParameterList>

      <!-- North -->
      <ParameterList name="BC03">
	<Parameter name="Type" type="string" value="Static Head"/>
	<Parameter name="BC value" type="double" value="0.0" />
	<Parameter name="Side set ID" type="int" value="2" />
      </ParameterList>      

      <!-- Bottom -->
      <ParameterList name="BC04">
	<Parameter name="Type" type="string" value="No Flow"/>
	<Parameter name="Side set ID" type="int" value="4" />
      </ParameterList>

      <!-- Top -->
      <ParameterList name="BC05">
	<Parameter name="Type" type="string" value="No Flow"/>
	<Parameter name="Side set ID" type="int" value="5" />
      </ParameterList>

     </ParameterList>
  </ParameterList>

</ParameterList>
