<amanzi_input version="2.2.1" type="structured">

  <model_description name="1D Flow and Transport, tritium decay">
    <author>Sergi Molins</author>
    <units>
      <length_unit>m</length_unit>
      <time_unit>y</time_unit>
      <mass_unit>kg</mass_unit>
      <conc_unit>molar</conc_unit>
    </units>
  </model_description>

  <definitions>
    <macros>
      <time_macro name="every_0.05_year">
        <start>0</start>
        <timestep_interval>1.5768e6</timestep_interval>
        <stop>-1</stop>
      </time_macro>
      <time_macro name="every_year">
        <start>0</start>
        <timestep_interval>31556926.0</timestep_interval>
        <stop>-1</stop>
      </time_macro>
    </macros>
  </definitions>

  <process_kernels>
    <flow state="on" model="saturated"/>
    <transport state="on" algorithm="explicit first-order" sub_cycling = "on"/>
    <chemistry engine="pflotran" state="on"  />
  </process_kernels>

  <phases>
    <liquid_phase name="water">
      <eos>False</eos>
      <viscosity>1.002e-3</viscosity>
      <density>998.2</density>
      <dissolved_components>
        <solutes>
          <solute coefficient_of_diffusion="1.0e-9">Tritium</solute>
        </solutes>
      </dissolved_components>
    </liquid_phase>
  </phases>

  <execution_controls>
      <comments> </comments>
      <verbosity level="high"/>
      <execution_control_defaults init_dt="1.5768e+5" max_dt="6.0e+10" reduction_factor="0.8" increase_factor="1.25" mode="transient" method="bdf1"/>
      <execution_control start="0.0" end="1.0" init_dt= "1.0" max_dt="6.0e+10" reduction_factor="0.8" increase_factor="1.25" mode="steady" method="bdf1"/>
      <execution_control start="1.0" end="1.5778463e9" mode = "transient"/>
  </execution_controls>

  <numerical_controls>
  </numerical_controls>

  <mesh framework="mstk">
    <comments>2D</comments>
    <dimension>2</dimension>
    <generate>
      <number_of_cells nx = "100"  ny = "1" />
      <box  low_coordinates = "(0.0,0.0)" high_coordinates = "(100.0,1.0)"/>
    </generate>
  </mesh>

  <regions>
    <region name ="All">
      <box low_coordinates= "(0.0,0.0)"     high_coordinates="(100.0,1.0)"/>
    </region>

    <region name ="west">
      <box low_coordinates= "(0.0,0.0)"     high_coordinates="(0.0,1.0)"/>
    </region>

    <region name ="east">
      <box low_coordinates= "(100.0,0.0)"   high_coordinates="(100.0,1.0)"/>
    </region>
  </regions>

  <geochemistry>
      <verbosity>silent</verbosity>
      <pflotran_chemistry>
	  <reaction_network file="1d-tritium-trim.in" format="simple" />
	  <database file="tritium.dat" />
      </pflotran_chemistry>
      <constraints>
	  <constraint name="initial" filename="1d-tritium-trim.in"/>
	  <constraint name="west" filename="1d-tritium-trim.in"/>
      </constraints>
<!-- option 2
		<radioactive_decay>
			<solute name="Tritium" rate_constant="1.78577e-09"/>
		</radioactive_decay>
-->

  </geochemistry>

  <materials>
    <material name="soil">
      <mechanical_properties>
        <porosity value="0.25"/>
        <!--particle_density value="2720.0"/-->
      </mechanical_properties>
      <permeability x="1.0e-12" y="1.0e-12"/>
<!-- option 1
		<radioactive_decay>
			<solute name="Tritium" rate_constant="1.78577e-09"/>
		</radioactive_decay>
-->
      <assigned_regions>All</assigned_regions>
    </material>
  </materials>

  <initial_conditions>  
    <initial_condition name="initial_ic">
      <assigned_regions>All</assigned_regions>
      <liquid_phase name="water">
        <liquid_component name="water">
          <uniform_pressure value="201325.0"/>
        </liquid_component>
        <geochemistry>
          <constraint name="initial"/>
        </geochemistry>
      </liquid_phase>
    </initial_condition>
  </initial_conditions>

  <boundary_conditions> 
    <boundary_condition name="west_bc">
      <assigned_regions>west</assigned_regions>
      <liquid_phase name="water">
        <liquid_component name="water">
          <inward_mass_flux value="7.91317859e-6" start="0" function="constant"/>
        </liquid_component>
        <geochemistry>
          <constraint name="west" function="constant" start="0.0"/>
        </geochemistry>
      </liquid_phase>
    </boundary_condition>
    <boundary_condition name="east_bc">
      <assigned_regions>east</assigned_regions>
      <liquid_phase name="water">
        <liquid_component name="water">
          <uniform_pressure value="201325.0" start="0" function="constant"/>
        </liquid_component>
      </liquid_phase>
    </boundary_condition>
  </boundary_conditions>

  <output>
    <vis>
      <base_filename>tritium_pflotran</base_filename>
        <num_digits>5</num_digits>
        <time_macros>every_year</time_macros>
    </vis>
  </output>

</amanzi_input>
