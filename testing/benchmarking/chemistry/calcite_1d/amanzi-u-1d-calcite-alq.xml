<amanzi_input type="unstructured" version="2.1.1">
  <model_description name="1D Flow and Transport w/ calcite dissolution">
    <units>
      <length_unit>m</length_unit>
      <time_unit>s</time_unit>
      <mass_unit>kg</mass_unit>
      <conc_unit>molar</conc_unit>
    </units>
  </model_description>

  <definitions>
    <macros>
      <time_macro name="Every_0.05_year">
        <start>0.0</start>
        <timestep_interval>1.5768e6</timestep_interval>
        <stop>-1</stop>
      </time_macro>
      <time_macro name="Every_year">
        <start>0.0</start>
        <timestep_interval>31556926.0</timestep_interval>
        <stop>-1</stop>
      </time_macro>
    </macros>
  </definitions>

  <process_kernels>
    <flow model="saturated" state="on" />
    <transport state="on" />
    <chemistry engine="pflotran" process_model="none" state="on" input_filename="1d-calcite-trim.in" />
  </process_kernels>

  <phases>
    <liquid_phase name="water">
      <eos>false</eos>
      <viscosity>1.002E-03</viscosity>
      <density>998.2</density>
      <dissolved_components>
        <solutes>
          <solute coefficient_of_diffusion="0.0">H+</solute>
          <solute coefficient_of_diffusion="0.0">HCO3-</solute>
          <solute coefficient_of_diffusion="0.0">Ca++</solute>
        </solutes>
      </dissolved_components>
    </liquid_phase>
    <solid_phase name="rock">
      <minerals>
        <mineral name="Calcite"/>
      </minerals>     
    </solid_phase>
  </phases>

  <execution_controls>
    <verbosity level="high" />
    <execution_control_defaults init_dt="1.0" mode="steady" />
    <execution_control end="0.0" mode="steady" start="0.0" reduction_factor="0.8" increase_factor="1.25"
                       init_dt="1.5768e+5"/>
    <execution_control end="1.5778463e9" mode="transient" 
                       dt_max="6.0e+10" reduction_factor="0.8" increase_factor="1.25" start="0.0" init_dt="1.5768e+5"/>
  </execution_controls>

  <numerical_controls>
    <unstructured_controls>
      <unstr_flow_controls>
        <preconditioning_strategy>diffusion_operator</preconditioning_strategy>
      </unstr_flow_controls>
      <unstr_transport_controls>
        <algorithm>explicit second-order</algorithm>
        <sub_cycling>on</sub_cycling>
        <cfl>1</cfl>
      </unstr_transport_controls>

      <unstr_steady-state_controls>
        <min_iterations>10</min_iterations>
        <max_iterations>15</max_iterations>
        <limit_iterations>20</limit_iterations>
        <max_preconditioner_lag_iterations>4</max_preconditioner_lag_iterations>
        <nonlinear_tolerance>1.0e-12</nonlinear_tolerance>
        <nonlinear_iteration_damping_factor>1</nonlinear_iteration_damping_factor>
        <nonlinear_iteration_divergence_factor>1000</nonlinear_iteration_divergence_factor>
        <max_divergent_iterations>3</max_divergent_iterations>
      </unstr_steady-state_controls>

      <unstr_transient_controls>
        <min_iterations>10</min_iterations>
        <max_iterations>15</max_iterations>
        <limit_iterations>20</limit_iterations>
        <max_preconditioner_lag_iterations>4</max_preconditioner_lag_iterations>
        <nonlinear_tolerance>1.0e-12</nonlinear_tolerance>
        <nonlinear_iteration_damping_factor>1</nonlinear_iteration_damping_factor>
        <nonlinear_iteration_divergence_factor>1000</nonlinear_iteration_divergence_factor>
        <max_divergent_iterations>3</max_divergent_iterations>
      </unstr_transient_controls>

      <unstr_chemistry_controls>
        <Parameter name="Verbosity" type="Array(string)" value="{verbose}" />
        <activity_model>debye-huckel</activity_model>
        <tolerance>1.5e-12</tolerance>
        <maximum_newton_terations>150</maximum_newton_terations>
        <auxiliary_data>pH</auxiliary_data>
        <max_time_step>15778463.0</max_time_step>
        <initial_time_step>1.5768e+7</initial_time_step>
        <time_step_control_method>fixed</time_step_control_method>
      </unstr_chemistry_controls>

      <unstr_linear_solver>
        <max_iterations>100</max_iterations>
        <tolerance>1e-20</tolerance>
      </unstr_linear_solver>
      <unstr_preconditioners>
        <hypre_amg />
        <trilinos_ml />
        <block_ilu />
      </unstr_preconditioners>
    </unstructured_controls>
  </numerical_controls>

  <mesh framework="mstk">
    <dimension>3</dimension>
    <generate>
      <number_of_cells nx="100" ny="1" nz="1"/>
      <box high_coordinates="100.0, 1.0, 1.0" low_coordinates="0.0, 0.0, 0.0" />
    </generate>
  </mesh>

  <regions>
    <region name="Entire Domain">
      <box high_coordinates="100.0, 1.0, 1.0" low_coordinates="0.0,0.0,0.0" />
    </region>
    <region name="West">
      <box high_coordinates="0.0,1.0,1.0" low_coordinates="0.0,0.0,0.0" />
    </region>
    <region name="East">
      <box high_coordinates="100.0,1.0,1.0" low_coordinates="100.0,0.0,0.0" />
    </region>
  </regions>

  <materials>
    <material name="Soil">
      <mechanical_properties>
        <porosity value="0.25"/>
      </mechanical_properties>
      <permeability x="1.E-12" y="1.E-12" z="1.E-12" />
      <assigned_regions>Entire Domain</assigned_regions>
      <minerals>
        <mineral name="Calcite" volume_fraction="1.0e-5" specific_surface_area="1.0"/>
      </minerals>
    </material>
  </materials>

  <initial_conditions>
    <initial_condition name="All">
      <assigned_regions>Entire Domain</assigned_regions>
      <liquid_phase name="water">
        <liquid_component name="water">
          <uniform_pressure name="IC1" value="201325.0" />
        </liquid_component>
        <geochemistry>
          <constraint name="initial"/>
        </geochemistry>
      </liquid_phase>
    </initial_condition>
  </initial_conditions>

  <boundary_conditions>
    <boundary_condition name="West BC">
      <assigned_regions>West</assigned_regions>
      <liquid_phase name="water">
        <liquid_component name="water">
          <inward_mass_flux function="uniform" start="0.0" value="7.91317859e-6"/>
        </liquid_component>
        <geochemistry>
          <constraint name="west" function="constant" start="0.0"/>
        </geochemistry>
      </liquid_phase>
    </boundary_condition>

    <boundary_condition name="East BC">
      <assigned_regions>East</assigned_regions>
      <liquid_phase name="water">
        <liquid_component name="water">
          <uniform_pressure function="uniform" start="0.0" value="201325.0"/>
        </liquid_component>
      </liquid_phase>
    </boundary_condition>
  </boundary_conditions>

  <geochemistry>
    <reaction_network file="1d-calcite-trim.in" format="simple"/>
    <constraint name="initial" filename="1d-calcite-trim.in"/>
    <constraint name="west" filename="1d-calcite-trim.in"/>
  </geochemistry>

  <output>
    <vis>
      <base_filename>calcite</base_filename>
      <num_digits>5</num_digits>
      <time_macros>Every_year</time_macros>
    </vis>
  </output>
</amanzi_input>
  
