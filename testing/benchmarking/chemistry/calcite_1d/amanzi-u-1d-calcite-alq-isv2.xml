<amanzi_input version="2.1.0" type="unstructured">

  <model_description name="1D Flow and Transport w/ calcite dissolution">
    <author>Glenn Hammond</author>
    <units>
      <length_unit>m</length_unit>
      <time_unit>y</time_unit>
      <mass_unit>kg</mass_unit>
      <conc_unit>molar</conc_unit>
    </units>
  </model_description>

  <definitions>
    <macros>
      <time_macro name="every_0.05_year">
        <start>0</start>
        <timestep_interval>1.5768e6</timestep_interval>
        <stop>-1</stop>
      </time_macro>
      <time_macro name="every_year">
        <start>0</start>
        <timestep_interval>31556926.0</timestep_interval>
        <stop>-1</stop>
      </time_macro>
    </macros>
  </definitions>

  <process_kernels>
    <flow state="on" model="saturated"/>
    <transport state="on" algorithm="explicit first-order" sub_cycling = "on"/>
    <chemistry state="on" engine="pflotran" process_model="implicit operator split"/>
  </process_kernels>

  <phases>
    <liquid_phase name="water">
      <eos>False</eos>
      <viscosity>1.002e-3</viscosity>
      <density>998.2</density>
      <dissolved_components>
        <solutes>
          <solute>H+</solute>
          <solute>HCO3-</solute>
          <solute>Ca++</solute>
        </solutes>
      </dissolved_components>
    </liquid_phase>
    <solid_phase>
      <minerals>
        <mineral>Calcite</mineral>
      </minerals>
    </solid_phase>
  </phases>

  <execution_controls>
      <comments> </comments>
      <verbosity level="extreme"/>
      <execution_control_defaults init_dt= "1.5768e+5"   max_dt="6.0e+10"  reduction_factor="0.8"  increase_factor="1.25" mode="transient" method="bdf1"/>
      <execution_control  start="0.0 y" end="0.0 y" init_dt= "1.5768e+5" max_dt="6.0e+10"  reduction_factor="0.8"  increase_factor="1.25" mode="steady" method="bdf1"/>
      <execution_control  start="0.0 y" end="1.5778463e9" mode = "transient" />
  </execution_controls>

  <numerical_controls>
    <unstructured_controls>
      <unstr_steady-state_controls>
        <min_iterations>10</min_iterations>
        <max_iterations>15</max_iterations>
        <limit_iterations>20</limit_iterations>
        <max_preconditioner_lag_iterations>4</max_preconditioner_lag_iterations>
        <nonlinear_tolerance>1.0e-12</nonlinear_tolerance>
        <!--
                <pseudo_time_integrator>
                       <method>picard</method>
                    <preconditioner>hypre_amg</preconditioner>
                    <linear_solver>aztec00</linear_solver>
                    <control_options>pressure</control_options>
                    <clipping_saturation>0.95</clipping_saturation>
                    <convergence_tolerance>0.95</convergence_tolerance>
                    <initialize_with_darcy>true</initialize_with_darcy>
                </pseudo_time_integrator>
                          -->
      </unstr_steady-state_controls>
      <unstr_transient_controls>
        <comments>Comments section.</comments>
        <bdf1_integration_method min_iterations="10" max_iterations="15" limit_iterations="20" max_preconditioner_lag_iterations="4" nonlinear_tolerance="1e-12" />
        <preconditioner>trilinos_ml</preconditioner>
      </unstr_transient_controls>
      <unstr_linear_solver>
        <comments>Comment section.</comments>
        <!--
        <method>gmres</method>
        <max_iterations>20</max_iterations>
                          -->
        <tolerance>1.0e-22</tolerance>
        <preconditioner>trilinos_ml</preconditioner>
      </unstr_linear_solver>
      <unstr_chemistry_controls>
        <chem_tolerance>1e-12</chem_tolerance>
        <chem_max_newton_iterations>250</chem_max_newton_iterations>
      </unstr_chemistry_controls>
    </unstructured_controls>
  </numerical_controls>

  <mesh framework="mstk">
    <comments>pseudo 3D</comments>
    <dimension>3</dimension>
    <generate>
      <number_of_cells nx = "100"  ny = "1"  nz = "1"/>
      <box  low_coordinates = "(0.0,0.0,0.0)" high_coordinates = "(100.0,1.0,1.0)"/>
    </generate>
  </mesh>

  <regions>
    <region name ="All">
      <box low_coordinates= "(0.0,0.0,0.0)"     high_coordinates="(100.0,1.0,1.0)"/>
    </region>

    <region name ="west">
      <box low_coordinates= "(0.0,0.0,0.0)"     high_coordinates="(0.0,1.0,1.0)"/>
    </region>

    <region name ="east">
      <box low_coordinates= "(100.0,0.0,0.0)"   high_coordinates="(100.0,1.0,1.0)"/>
    </region>
  </regions>

  <materials>
    <material name="soil">
      <mechanical_properties>
        <porosity value="0.25"/>
        <!--particle_density value="2720.0"/-->
      </mechanical_properties>
      <!-- Begin proposed isotherm section using Amanzi native chemistry -->
      <sorption_isotherms>
        <solute name = "A" model = "linear" kd = "10.0"/>
        <solute name = "B" model = "langmuir" kd = "30.0" b = "0.1"/>
        <solute name = "C" model = "freundlich" kd = "1.5" n = "1.25"/>
      </sorption_isotherms>
      <!-- End proposed isotherm section -->
      <permeability x="1.0e-12" y="1.0e-12" z="1.0e-12"/>
      <assigned_regions>All</assigned_regions>
    </material>
  </materials>

  <initial_conditions>  
    <initial_condition name="initial_ic">
                    <assigned_regions>All</assigned_regions>
                    <liquid_phase name="water">
                        <liquid_component name="water">
                            <uniform_pressure value="201325.0"/>
                        </liquid_component>
                        <solute_component name= "A" value= "1.e-20" function="uniform"/>
                        <solute_component name= "B" value= "1.e-20" function="uniform"/>
                        <solute_component name= "C" value= "1.e-20" function="uniform"/>
                        <geochemistry>
                          <constraint name="initial"/>
                        </geochemistry>
                    </liquid_phase>
    </initial_condition>
  </initial_conditions>

  <boundary_conditions> 
    <boundary_condition name="west_bc">
      <assigned_regions>west</assigned_regions>
      <liquid_phase name="water">
        <liquid_component name="water">
          <inward_mass_flux value="7.91317859e-6" start="0" function="constant"/>
        </liquid_component>
        <solute_component name="solute">
          <aqueous_conc name = "A" start = "0.0" value= "1.e-03" function="constant"/>
          <aqueous_conc name = "B" start = "0.0" value= "1.e-03" function="constant"/>
          <aqueous_conc name = "C" start = "0.0" value= "1.e-03" function="constant"/>
        </solute_component>
        <geochemistry>
          <constraint name="west" start = "0.0"/>
        </geochemistry>
      </liquid_phase>
    </boundary_condition>
    <boundary_condition name="east_bc">
      <assigned_regions>east</assigned_regions>
      <liquid_phase name="water">
        <liquid_component name="water">
          <uniform_pressure value="201325.0" start="0" function="constant"/>
        </liquid_component>
      </liquid_phase>
    </boundary_condition>
    <!-- EIB: problem I'm matching uses BC: Zero Gradient which doesn't actually exist, 
         so removing BC to match target problem.
    <boundary_condition name="east_bc">
      <assigned_regions>east</assigned_regions>
      <liquid_phase name="water">
        <liquid_component name="water">
          <uniform_pressure value="201325.0" start="0.0" function="constant"/>
        </liquid_component>
        <solute_component name="solute">
          <aqueous_conc name = "A" start = "0.0" value= "0" function="constant"/>
          <aqueous_conc name = "B" start = "0.0" value= "0" function="constant"/>
          <aqueous_conc name = "C" start = "0.0" value= "0" function="constant"/>
        </solute_component>
      </liquid_phase>
    </boundary_condition>
                -->
  </boundary_conditions>

  <geochemistry>
    <reaction_network file="1d-calcite-trim.in" format="simple"/>
    <constraint name="initial" filename="1d-tritium-trim.in"/>
    <constraint name="west" filename="1d-tritium-trim.in"/>
  </geochemistry>

  <output>
    <vis>
      <base_filename>isotherms</base_filename>
        <num_digits>5</num_digits>
        <time_macros>every_year</time_macros>
    </vis>
  </output>

</amanzi_input>
