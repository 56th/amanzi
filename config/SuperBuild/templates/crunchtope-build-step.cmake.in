# CMake crunchtope configure file

# Replace src/Makefile.inc with our generated version.
execute_process(
  COMMAND ${CMAKE_COMMAND} -E copy @CRUNCHTOPE_prefix_dir@/Makefile.inc @CRUNCHTOPE_source_dir@/src)

# Now run the patch script
set(command sh @CRUNCHTOPE_sh_build@)
execute_process(
  COMMAND ${command}
  RESULT_VARIABLE result
  WORKING_DIRECTORY "@CRUNCHTOPE_source_dir@/src"
)

if (result)
  set(msg "crunchtope build command failed")
  foreach(arg IN LISTS command )
    set(msg "${msg} '${arg}'")
  endforeach()
  message(FATAL_ERROR ${msg})
endif()  

         
